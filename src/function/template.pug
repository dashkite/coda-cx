include ../-mixins

style
  include:stylus index.styl

article
  h1
    if category == "method"
      if scope == "class"
        = `${type.name}.${name}`
      else if scope == "instance"
        = `${type.name}::${name}`
    else
      = name


  +wikitext(summary, "text/markdown")(data-path = parent)

  coda-signatures(data-path = path)

  coda-variables(data-path = path)

  +wikitext(description)(data-path = parent)

  hydrogen-block(data-key = `${path}/description`)
    h2 Description

  hydrogen-blocks(data-glob = `${path}/example/*`)
    h2 Example

  hydrogen-blocks(data-glob = `${path}/examples/*`)
    h2 Examples
